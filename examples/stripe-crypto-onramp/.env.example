# Database
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_onramp

# Redis
REDIS_URL=redis://localhost:6379

# Stripe
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Blockchain - Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETHEREUM_TESTNET_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_KEY
ETHEREUM_HOT_WALLET_PRIVATE_KEY=0x...
ETHEREUM_COLD_WALLET_ADDRESS=0x...

# Blockchain - Bitcoin
BITCOIN_RPC_URL=https://bitcoin-mainnet.api.com
BITCOIN_TESTNET_RPC_URL=https://bitcoin-testnet.api.com
BITCOIN_HOT_WALLET_PRIVATE_KEY=...
BITCOIN_COLD_WALLET_ADDRESS=...

# Exchange Rate APIs
COINGECKO_API_KEY=your_coingecko_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# KYC Provider (choose one)
# Onfido
ONFIDO_API_KEY=your_onfido_api_key
ONFIDO_WEBHOOK_SECRET=your_onfido_webhook_secret

# Sumsub
SUMSUB_API_KEY=your_sumsub_api_key
SUMSUB_SECRET_KEY=your_sumsub_secret_key

# AWS S3 (for KYC documents)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_min_32_characters
NEXTAUTH_URL=http://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CryptoOnramp
NODE_ENV=development

# Feature Flags
ENABLE_KYC=true
ENABLE_RECURRING_BUYS=false
ENABLE_MULTIPLE_CURRENCIES=true

# Limits
MAX_TRANSACTION_NO_KYC=100
MAX_TRANSACTION_BASIC_KYC=1000
MAX_TRANSACTION_ENHANCED_KYC=10000

# Fees (in percentage)
PLATFORM_FEE_PERCENTAGE=2.0
MIN_PLATFORM_FEE=1.00

# Network Configuration
USE_TESTNET=true
CONFIRMATIONS_REQUIRED_BTC=6
CONFIRMATIONS_REQUIRED_ETH=12

# Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@example.com

# Webhook URLs
WEBHOOK_CALLBACK_URL=https://yourapp.com/api/webhooks
